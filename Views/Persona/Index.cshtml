@model IEnumerable<Prueba_3.Models.PersonaClass>

@{
    ViewData["Title"] = "Persona";
}

<h1>Listado @ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Num_identificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha_nacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono_1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono_2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo_electronico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Num_identificacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha_nacimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono_1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono_2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Correo_electronico)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
